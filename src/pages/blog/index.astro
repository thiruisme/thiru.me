---
import Layout from "../../components/Layout.astro";
import { getCollection } from "astro:content";
const archiveDesc = "Browse all posts on design, ideas, technology and aesthetics.";
const posts = await getCollection("posts");

// Sort posts by datetime if available, fallback to date
const sortedPosts = posts.sort((a, b) => {
  const dateA = a.data.datetime || a.data.date;
  const dateB = b.data.datetime || b.data.date;
  return dateB.getTime() - dateA.getTime();
});
---
<Layout current="blog" title="All Posts â€“ Thiru's Internet Corner" description= {archiveDesc}>
  <main class="content">
    <h1>Blog Archive</h1>
    <div class="cards">
      {sortedPosts.map((p) => (
        <article class="card">
          <a href={`/blog/${p.slug}/`}>
            <img
              class="frame"
              src={p.data.thumbnail || "https://placehold.co/280x160?text=Thumbnail"}
              alt={p.data.title}
            />
            <div class="card-body">
              <div class="card-title">{p.data.title}</div>
              <p class="card-text">{p.data.excerpt ?? ""}</p>
            </div>
          </a>
        </article>
      ))}
    </div>
  </main>
</Layout>
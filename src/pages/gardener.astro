    overflow-y: auto;
    position: relative;
    z-index: 2;
  }

  .connections-header {
    padding: 0.75rem;
    background: linear-gradient(135deg, #f0f8f0, #e8f5e8);
    border-bottom: 1px solid rgba(43, 122, 87, 0.1);
    font-size: 0.9rem;
    color: var(--emerald-dark);
    font-weight: 500;
  }

  .connection-option {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem;

---
// src/components/PostCard.astro
import type { CollectionEntry } from 'astro:content';

export interface Props {
  post: CollectionEntry<'posts'>;
}

const { post } = Astro.props;
---

<article class="card" transition:name={`blog-card-${post.slug}`}>
  <a href={`/blog/${post.slug}/`}>
    <img
      src={post.data.thumbnail || "https://placehold.co/280x160?text=Thumbnail"}
      alt={post.data.thumbnailAlt || post.data.title}
      width="280"
      height="160"
      loading="lazy"
      class="card-thumbnail"
    />
    <div class="card-body">
      <div class="card-title">{post.data.title}</div>
      <p class="card-text">{post.data.excerpt || ""}</p>
    </div>
  </a>
</article>

<style>
  .card-thumbnail {
    width: 100%;
    aspect-ratio: 16/9;
    object-fit: cover;
    background: var(--card-bg);
  }
</style>